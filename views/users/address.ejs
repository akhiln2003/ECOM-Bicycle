<div class="container">
    <div class="main-body">
    
          						<!-- Breadcrumb Section -->
                    <section class="breadcrumb-section" style="margin-top: 70px; margin-bottom: 30px;">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <h2>ADDRESS</h2>
                                    <div class="breadcrumb-text">
                                        <a style="color: black; text-decoration: none; " href="/">Home</a> >
                                        <span>Address</span>
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              
              <div class="card mt-3">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap ">
                    
                    <i class="fa-regular fa-user"> <a href="/profile">Profile</a></i>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                   
                    <i class="fa-solid fa-address-card"> <a href="/address  ">Address</a></i>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                   
                    <i class="fa-solid fa-wallet"> <a href="cart.html">Wallet</a></i>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                   
                    <i class="fa-solid fa-tag"> <a href="cart.html">My copon</a></i>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                 
                    <i class="fa-solid fa-basket-shopping">   <a href="cart.html">odres</a></i>
                  </li>
                </ul>
              </div>
            </div>
           
            <div class="col-md-8">
                <!-- Address Listing Table -->
                <table class="address-table" id="Reload" >
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>State/Country</th>
                            <th>Pin</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        <% user.address.forEach((value,i)=>{ %>
                        <tr>
                            <td><%= value.name %></td>
                            <td><%= value.state %> / <%= value.city %></td>
                            <td><%= value.pin %></td>
                            <td><%= value.phone %></td>
                            <td>
                                <a class="btn btn-success" href="/editAddress?index=<%=i%>",>Edit</a>
                                <a class="btn btn-danger" onclick="return deleteAddress('<%= user._id %>' , '<%= value._id %>')" >Delete</a>
                               
                            </td>
                        </tr>
                        <% }) %>
                       
                    </tbody>
                </table>
                <a style="margin-left: 1rem; margin-top: 3rem;" class="btn btn-success " href="/addAddress">Add Address</a>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteAddress (userid,addressid){
        const data = {userid:userid,addressid:addressid};
        Swal.fire({
            icon: "warning",
            title: 'are you sure',
            showCancelButton: 'true',
            cancelButtonColor: '#d33',
            confirmButtonText: 'yes!',
            confirmButtonColor: '#3085d6'
       })
    .then((response)=>{
             if (response.isConfirmed) {
                fetch('/deletAddress',{
                    method:'POST',
                    headers: {
                                'Content-Type': 'application/json',
                            },
                    body:JSON.stringify(data),
                }).then((reselt)=>{
                    if(reselt.ok){
                        Swal.fire({
                            icon: 'success',
                            title: 'deleted'
                        })
                        $('#Reload').load('/address  #Reload')
                    }
                })
            }
        })
     }
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


