<!-- Registration form -->
<div class="container " style="margin-top: 10rem;">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 ">
            <h2 class=" text-center" style="margin-top: 2rem;">Create an account</h2>
            <form action="#" method="post" style="display: flex; flex-direction: column; gap: 2;">

                <!-- Name -->
                <div class="form-group col-md-8 mx-auto text-left">
                    <label for="firstName" style="color: white; font-size: 16px;">Name</label>
                    <input type="text" placeholder="Name" class="form-control" id="firstName" name="firstName" required>
                </div>

                <!-- Email -->
                <div class="form-group col-md-8 mx-auto text-left">
                    <label for="email" style="color: white; font-size: 16px;">Email Address</label>
                    <input type="email" placeholder="Email" class="form-control" id="email" name="email" required>
                </div>

                <!-- Phone Number -->
                <div class="form-group col-md-8 mx-auto text-left">
                    <label for="PhoneNumber" style="color: white; font-size: 16px;">Phone Number</label>
                    <input type="text" placeholder="PhoneNumber" class="form-control" id="PhoneNumber" name="PhoneNumber" required>
                </div>

                <!-- Date Of Birth -->
                <div class="form-group col-md-8 mx-auto text-left">
                    <label for="dateOfBirth" style="color: white; font-size: 16px;">Date Of Birth</label>
                    <input type="date"  class="form-control" id="dateOfBirth" name="dateOfBirth" required>
                </div>

                <!-- Gender -->
                <div class="form-group col-md-8 mx-auto text-left">
                    <label for="gender" style="color: white; font-size: 16px;">Gender</label>
                    <select class="form-control" id="gender" name="gender" required>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <!-- Password -->
                <div class="form-group col-md-8 mx-auto text-left">
                    <label for="password" style="color: white; font-size: 16px;">Password</label>
                    <input type="password" placeholder="Password" class="form-control" id="password" name="password" required>
                </div>

                <!-- Conform Password -->
                <div class="form-group col-md-8 mx-auto text-left">
                    <label for="ConformPassword" style="color: white; font-size: 16px;">Confirm Password</label>
                    <input type="password" placeholder="ConformPassword" class="form-control" id="ConformPassword" name="ConformPassword" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary mx-auto mt-3" style="width: 66%;">Register</button>

				   <!-- Login pag -->
				   <div class="form-group col-md-8 mx-auto text-left text-center mt-2 mb-5	 ">
					<p style="margin: 0;"> <a style="  text-decoration: none;" href="/login"><b>Login</b></a></p>
					
                </div>
            </form>
        </div>
    </div>
</div>

		
