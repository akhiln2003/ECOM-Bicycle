<!-- Login form -->
<div class="container" style="margin-top: 10rem;">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 ">
            <h2 class="text-center " style="margin-top: 2rem;">Login </h2>
            <form action="#" method="post" style="display: flex; flex-direction: column; gap: 2;">

                <!-- Email -->
                <div class="form-group mx-auto text-left" style="width: 80%;">
                    <label for="email" style="color: rgb(187, 187, 187); font-size: 16px;"><b>Emale</b></label>
                    <input type="email" placeholder="Email" class="form-control" id="email" name="email" required>
                </div>

                <!-- Password -->
                <div class="form-group mx-auto text-left" style="width: 80%;">
                    <label for="password" style="color: rgb(187, 187, 187); font-size: 16px;"><b>Password</b></label>
                    <input type="password" placeholder="Password" class="form-control" id="password" name="password" required>
                </div>

                 <!-- Reset Password Link -->
                 <div class="form-group mx-auto text-left mt-2" style="width: 80%;">
                    <p style="margin: 0;"> <a style="  text-decoration: none;" href="/register"><b>Forgot password?</b></a></p>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary mx-auto" style="width: 80%; ">Login</button>        
            </form>
        </div>
    </div>
</div>

