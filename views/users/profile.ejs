<%- include('../layout/user/header.ejs') %>
<%- include('../layout/user/navbar.ejs') %>

<style>
    /* Background image */
    .background-image {
        background-image: url('/assets/img/slider/1.jpg'); /* Change the URL to your background image */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        padding: 50px 0; /* Add padding to create space around the content */
    }
    /* Your existing styles */
    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    /* Add Bootstrap modal styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-dialog {
        max-width: 500px;
    }

    .modal-content {
        border-radius: 5px;
    }

    .close-btn {
        cursor: pointer;
        position: absolute;
        top: 10px;
        right: 10px;
    }
</style>

<div class="background-image">

<div class="container">
    <div class="main-body">

        <!-- Breadcrumb Section -->
        <section class="breadcrumb-section">
            <div class="container">
                <div class="row">
                    <div class="col-12" style="margin-top: 55px; margin-bottom: 30px;">
                        <h2 style="color: white;">PROFILE</h2>
                        <div class="breadcrumb-text">
                            <a style="color: white; text-decoration: none; " href="/">Home  > </a>
                            <span style="color: white;">Profile</span>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">

                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <i class="fa-regular fa-user"> <a style="text-decoration: none;" href="/profile">Profile</a></i>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <i class="fa-solid fa-address-card"> <a style="text-decoration: none;" href="/address">Address</a></i>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <i class="fa-solid fa-wallet"> <a style="text-decoration: none;" href="/wallet">Wallet</a></i>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <i class="fa-solid fa-basket-shopping"> <a style="text-decoration: none;" href="/orderHistory">order History</a></i>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.name %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.email %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.mobile %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-success" href="/editProfile?id=<%= user._id %>" >Edit Profile </a>
                                <a class="btn btn-success" href="/changePassword?id=<%= user._id %>" >Change Password</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


<%- include('../layout/user/footbar.ejs') %>
<%- include('../layout/user/footer.ejs') %>


