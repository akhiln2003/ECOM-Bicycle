<%- include("../layout/admin/header.ejs") -%>
        <div class="screen-overlay"></div>
        <%- include("../layout/admin/sidbar.ejs") -%> 
        <main class="main-wrap">
            <%- include("../layout/admin/navbar.ejs") -%> 
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Coupon List</h2>
                        <p>Lorem ipsum dolor sit amet.</p>
                    </div>
                    <div>
                        <a href="/admin/addcoupon" class="btn btn-primary"><i class="material-icons md-plus"></i>Add Coupon</a>
                    </div>
                </div>
                <div class="card mb-4">
                    
                    <div class="card-body" id="Reload">
                        <table class="table table-hover" >
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Coupon Code</th>
                                    <th scope="col">Expiry Date</th>
                                    <th scope="col">Limit Of Use</th>
                                    <th scope="col">Discount</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col" class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% let count =0 %>
                              <% coupons.forEach((coupon)=>{ %>
                                <% if(coupon.isDeleted == false ){ %>
                                <% count++ %>
                                <tr>
                                        <td><%= count %></td>
                                        
                                            <td><%= coupon.name %></td>
                                            <td><%= coupon.couponCod %></td>
                                           
                                                <td><%= coupon.expiryDate.toLocaleString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }) %></td>
                                               
                                            <td><%= coupon.minSpend %></td>
                                            <td><%= coupon.discount %></td>
                                            <td><a href="/admin/editCoupon?id=<%= coupon._id %>" ><i class="material-icons md-edit"></i></a></td>
                                            <td class="text-end"> <button type="button" class="btn btn-sm btn-danger rounded font-sm mt-15" onclick="deleteProduct('<%= coupon._id %>')"> Delete </button> </td>
                                         
                                </tr>
                                <% } %>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- card end// -->
                <div class="pagination-area mt-30 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                            <li class="page-item">
                                <a class="page-link" href="/admin/"><i class="material-icons md-chevron_left"></i></a>
                            </li>
                           
                                <li class="page-item "><a class="page-link" href="/admin/">9</a></li>
                                
                            <li class="page-item">
                                <a class="page-link" href="/admin"><i class="material-icons md-chevron_right"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </section>
            <!-- content-main end// -->
            
        </main>
        
        <script>
            function deleteProduct(couponId){
                const data =  {id:couponId};
                Swal.fire({
                    icon:"warning",
                    title:"are you sure",
                    showCancelButton:"true",
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'yes!',
                    confirmButtonColor: '#3085d6'
                }).then((response)=>{
                    if(response.isConfirmed){
                        fetch('/admin/deleteCoupon',{
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(data)        
                        }).then((reselt) => {
                            if (reselt.ok) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'deleted'
                                })
                                $('#Reload').load('/admin/coupon  #Reload')
                            }
                        })
                    }
                })
            }
        </script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



